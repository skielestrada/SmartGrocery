<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skielcorp.smartgrocery" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".item.AddItemActivity"
            android:label="@string/title_activity_add_item" >
        </activity>
        <activity
            android:name=".item.EditItemActivity"
            android:label="@string/title_activity_edit_item" >
        </activity>
        <activity
            android:name=".grocerylist.AddGroceryListActivity"
            android:label="@string/title_activity_add_grocery_list" >
        </activity>
        <activity
            android:name=".grocerylist.EditGroceryListActivity"
            android:label="@string/title_activity_edit_grocery_list" >
        </activity>
        <activity
            android:name=".grocerylist.FillGroceryListActivity"
            android:label="@string/title_activity_fill_grocery_list" >
        </activity>
    </application>

</manifest>
